<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/loan_item_parent_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.47"
        android:layout_height="wrap_content"
        android:text="Loan Item Title"
        android:id="@+id/loan_item_title"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.30"
        android:textAlignment="center"
        android:text="29/04/2019"
        android:id="@+id/loan_item_due_date"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="0.23"
        android:backgroundTint="@color/colorPrimaryProfile"
        android:textColor="#FFF"
        android:text="Renew"
        android:id="@+id/loan_item_button"/>

    </LinearLayout>

</RelativeLayout>
