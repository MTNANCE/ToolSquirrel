<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_build_black_24dp"
        android:id="@+id/tool_details_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tool name"
        android:layout_below="@id/tool_details_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="28dp"
        android:textStyle="bold"
        android:id="@+id/tool_details_tile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tool description. Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        android:layout_below="@id/tool_details_tile"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:textSize="18dp"
        android:id="@+id/tool_details_desc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_details_desc"
        android:layout_marginLeft="30dp"
        android:text="2 copies, 1 available"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/tool_details_availability"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_details_availability"
        android:paddingHorizontal="30dp"
        android:stretchColumns="0, 1, 2">

        <TableRow>
            <TextView
                android:text="ID"
                android:padding="3dip"/>

            <TextView
                android:text="Status"
                android:padding="3dip"/>

            <TextView
                android:text="Location"
                android:padding="3dip"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="#12345678"
                android:padding="3dip"/>

            <TextView
                android:text="Available"
                android:padding="3dip"/>

            <TextView
                android:text="A300 (Blå)"
                android:padding="3dip"/>

        </TableRow>
        <TableRow>
            <TextView
                android:text="#38193028"
                android:padding="3dip"/>

            <TextView
                android:text="Loaned"
                android:padding="3dip"/>

            <TextView
                android:text="A300 (Blå)"
                android:padding="3dip"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>